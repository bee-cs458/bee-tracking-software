{
  "name": "beets",
  "version": "0.1.0",
  "description": "BEE Tracking Software",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "npm start --prefix client/",
    "dev:server": "cross-env NODE_ENV=development nodemon --ignore client/ index.js",
    "start": "node index.js",
    "test": "ava",
    "build": "npm run build --prefix client/",
    "postinstall": "cd client/ && npm install"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.20.1",
    "concurrently": "^7.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "loglevel": "^1.8.0",
    "loglevel-plugin-prefix": "^0.8.4",
    "mysql2": "^2.3.3",
    "nodemon": "^2.0.20",
    "postinstall": "^0.8.0"
  },
  "devDependencies": {
    "ava": "^5.0.1",
    "cross-env": "^7.0.3",
    "supertest": "^6.3.1"
  },
  "ava": {
    "files": [
      "tests/*",
      "!**/mock_data/**"
    ]
  }
}
